// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  active    Boolean   @default(true)
  email     String    @unique
  password  String
  userName  String
  profile   Profile?
  addresses Address[]
  groups    Group[]
}

model Profile {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  bio       String
  User      User   @relation(fields: [userId], references: [id])
  userId    String @unique
}

model Address {
  id      String  @id @default(uuid())
  name    String
  street  String
  city    String
  state   String
  zip     String
  country String
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
}

model Group {
  id          String @id @default(uuid())
  name        String @unique
  description String
  users       User[]
}
